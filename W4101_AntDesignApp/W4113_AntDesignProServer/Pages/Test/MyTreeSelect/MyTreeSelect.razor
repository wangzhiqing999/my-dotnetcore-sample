		<TreeNode TItem="string" Key="sub_sz" Title="深圳分公司">
			<TreeNode TItem="string" Key="sub_sz_01" Title="南山营业点" />
			<TreeNode TItem="string" Key="sub_sz_02" Title="罗湖营业点" />
		</TreeNode>
	</TreeNode>

</TreeSelect>
<br />
<div>选择的数值:  @string.Join(',', _selectedDeptCodes)</div>
<br />



