
@{
    ViewData["Title"] = "标准方式翻页";
}

<h2>Page</h2>


<div id="master">
    <table>
        <tbody id="testTable">
            <tr>
                <th width="10%">时间</th>
                <th width="10%">&nbsp;</th>
                <th width="10%">国家</th>
                <th width="40%">指标名称</th>
                <th width="10%">前值</th>
                <th width="10%">预测值</th>
                <th width="10%">公布值</th>
            </tr>

            <tr v-for="item in dataList">
                <td> {{item.displayFinanceDate}} </td>
                <td> <img v-bind:src="'/images/Country/' + item.countryClassName + '.png'"> </td>
                <td> {{item.countryName}} </td>
                <td> {{item.content}} </td>
                <td> {{item.previous}} </td>
                <td> {{item.predict}} </td>
                <td> {{item.currentValue}} </td>
            </tr>            
        </tbody>
    </table>


    <div id="pageBar">
        <a v-on:click="firstPage"> 首页 </a>

        <a v-on:click="prevPage" v-if="pageIndex > 1"> 上一页 </a>

        <span> 第 {{ pageIndex }} 页 </span>

        <a v-on:click="nextPage" v-if="pageIndex < pageCount"> 下一页 </a>

        <a v-on:click="lastPage"> 末页 </a>
    </div>

</div>



@section Scripts
    {

    <script src="~/js/vue.js"></script>


    <script>


        // 当前服务.
        var appVue = new Vue({
            el: "#master",
            data: {
                // 数据列表.
                dataList: [],
                // 页面索引.
                pageIndex: 1,
                // 总页面大小.
                pageCount: 1
            },
            created: function () {
                // 加载数据.
                this.getData();
            },
            methods: {
                getData: function () {
                    var _self = this;
                    $.post(
                        "/Finance/GetFinanceData",
                        {
                            pageNo: _self.pageIndex,
                            pageSize: 30
                        },
                        function (data, status) {
                            _self.dataList = [];
                            for (var i = 0, len = data.financeDataList.length; i < len; i++) {
                                var item = data.financeDataList[i];
                                _self.dataList.push(item);
                            }
                            _self.pageCount = data.pageCount;
                            //_self.pageIndex++;
                        });
                },

                // 首页.
                firstPage: function () {
                    this.pageIndex = 1;
                    this.getData();
                },
                // 末页.
                lastPage: function () {
                    this.pageIndex = this.pageCount;
                    this.getData();
                },

                // 上一页.
                prevPage: function () {
                    this.pageIndex = this.pageIndex - 1;
                    this.getData();
                },
                // 下一页.
                nextPage: function () {
                    this.pageIndex = this.pageIndex + 1;
                    this.getData();
                }
            }
        });

    </script>
}